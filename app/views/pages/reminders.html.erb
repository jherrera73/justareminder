<h1>Reminders</h1>

<table class="table">
  <tr>
    <th>Description</th>
    <th>Start</th>
    <th>End</th>
  </tr>

<% @reminders.each do |reminder| %>
  <tr>
    <td><%= reminder.description %></td>
    <td><%= reminder.location ? link_to(reminder.location, reminder.location_url) : "No location given" %></td>
    <td><%= reminder.start.strftime("%m/%d/%Y  %I:%M%p") %></td>
    <td><%= reminder.end.strftime("%m/%d/%Y  %I:%M%p") %></td>
  </tr>
<% end %>
</table>