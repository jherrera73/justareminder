<h1>Contacts</h1>

<table class="table">
  <tr>
    <th>Full name</th>
    <th>Email</th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.full_name %></td>
    <td><%= contact.email %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-small btn-info" %></td>
    <td><%= link_to 'Destroy', contact, class: "btn btn-small btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

