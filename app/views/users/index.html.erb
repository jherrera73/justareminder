<h1>Listing users</h1>

<table class="table">
  <tr>
    <th>Full Name</th>
    <th>Email</th>
    <th>Time Zone</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
	<td><%= user.time_zone %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-small btn-info" %></td>
    <td><%= button_to 'Delete', user, class: "btn btn-small btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

